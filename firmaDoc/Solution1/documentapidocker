#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["document.API/documentAPI.csproj", "document.API/"]
COPY ["documentDTO/documentDTO.csproj", "documentDTO/"]
COPY ["documentEntities/documentEntities.csproj", "documentEntities/"]
COPY ["fileDTO/fileDTO.csproj", "fileDTO/"]
COPY ["logDTO/logDTO.csproj", "logDTO/"]
RUN dotnet restore "document.API/documentAPI.csproj"
COPY . .
WORKDIR "/src/document.API"
RUN dotnet build "documentAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "documentAPI.csproj" -c Release -o /app/publish 

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "documentAPI.dll"]

