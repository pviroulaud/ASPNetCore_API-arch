#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["certificate.API/certificateAPI.csproj", "certificate.API/"]
COPY ["certificateDTO/certificateDTO.csproj", "certificateDTO/"]
COPY ["certificateEntities/certificateEntities.csproj", "certificateEntities/"]
COPY ["helpers.certificate/helpers.certificate.csproj", "helpers.certificate/"]
RUN dotnet restore "certificate.API/certificateAPI.csproj"
COPY . .
WORKDIR "/src/certificate.API"
RUN dotnet build "certificateAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "certificateAPI.csproj" -c Release -o /app/publish 

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "certificateAPI.dll"]

